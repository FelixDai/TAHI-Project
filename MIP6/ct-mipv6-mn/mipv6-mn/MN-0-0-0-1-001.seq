#--------------------------------------------------------------#
# ENTRANCE
#--------------------------------------------------------------#
# Set the test version used for the display.
BEGIN { $V6evalTool::TestVersion = '$Name: MIPv6_4_0_5 $'; }

# Import the package.
use V6evalTool;
use mip6_mn_config;
use mip6_mn_common;
use mip6_mn_get;
use mip6_mn_send;
use mip6_mn_neighbor;
use mip6_mn_recv;
use mip6_mn_msg;

#--------------------------------------------------------------#
# INITIALIZATION
#--------------------------------------------------------------#
# Do the test satisfied the condition.
my @options = (
	'TEST_STATE_NORMAL',        'YES',                0,
	'TEST_FUNC_BASIC',          'YES',                0,
);

# Initialize the state of TARGET.
Init_MN(@options);

#--------------------------------------------------------------#
# PREPARATION
#--------------------------------------------------------------#
# Prepare other variables.
my @value;
my $sec;

#--------------------------------------------------------------#
# TEST PROCEDURE
#--------------------------------------------------------------#
#--------------------------------------------------------------#
# NUT moves from Link0 to LinkX.
#--------------------------------------------------------------#
# Receive Binding Update to HA0. (NUTX -> HA0)
# Send Binding Acknowledgement. (HA0 -> NUTX)
$HA_BA_LIFETIME = 15;
%packet = vRecv_to_move_from_Link0_to_LinkX($IF0);
if ($packet{status} != 0) {
	$failcount ++;
	goto TERM;
}
%packet_bu = %RECV_PACKET_BU;
%packet_ba = %SEND_PACKET_BA;

%value_ba = get_value_of_ba(0, \%packet_ba);
$lifetime = $value_ba{Lifetime} * 4;
#--------------------------------------------------------------#
vLogHTML_Info("<B>HA0 waits for Re-Binding Update. $lifetime [sec]</B>");
#--------------------------------------------------------------#
# (wait)
# Receive Binding Update. (NUTX -> HA0)
$sec = $lifetime + $BU_MARGIN_TIME;
%packet_re_bu = vRecv_at_LinkX($IF0, $sec, 'bu_nutxga_ha0ga_hoa_nuthga');
if ($packet_re_bu{status} != 0) {
	vLogHTML_Fail("FAIL: HA0 does not receive Re-Binding Update. $lifetime [sec]");
	$failcount ++;
	goto TERM;
}

# Send Binding Acknowledgement. (HA0 -> NUTX)
%packet_ba = vSend_ba($IF0, 'ba_ha0ga_nutxga_rh2_nuthga', \%packet_re_bu);

if (check_regitime($packet_re_bu{recvTime1}, ($packet_bu{recvTime1} + $lifetime)) != 0) {
	$wk = $packet_re_bu{recvTime1} - ($packet_bu{recvTime1} + $lifetime);
	vLogHTML_Warn("WARN: HA0 receives Re-Binding Update delaying. $wk [sec]");
	$warncount ++;
}

# Send Router Advertisement. (R1 -> R1_allnode_multi)
vRecv_at_LinkX($IF0, $MinDelayBetweenRAs);

#--------------------------------------------------------------#
# NUT moves from LinkX to LinkY.
#--------------------------------------------------------------#
# Receive Binding Update. (NUTY -> HA0)
# Send Binding Acknowledgement. (HA0 -> NUTY)
%packet = vRecv_to_move_from_LinkX_to_LinkY($IF0);
if ($packet{status} != 0) {
	$failcount ++;
	goto TERM;
}

# Real Home Link
if ($MN_CONF{TEST_FUNC_REAL_HOME_LINK} ne 'YES') {
	goto JUDGE_1;
}

# Send Router Advertisement. (R2 -> R2_allnode_multi)
vRecv_at_LinkY($IF0, $MinDelayBetweenRAs);

#--------------------------------------------------------------#
# NUT moves from LinkY to Link0.
#--------------------------------------------------------------#
# Receive Binding Update to HA0. (NUT0 -> HA0)
# Send Binding Acknowledgement. (HA0 -> NUT0)
# Receive Neighbor Advertisement. (NUT0 -> NUT0_allnode_multi) 
%packet = vRecv_to_move_from_LinkY_to_Link0($IF0);
if ($packet{status} != 0) {
	$failcount ++;
	goto TERM;
}

JUDGE_1:
#--------------------------------------------------------------#
# JUDGEMENT
#--------------------------------------------------------------#
if ($failcount == 0) {
	vLogHTML_Pass("(*1) PASS: Transmission and reception of all messages were completed.");
}

TERM:
#--------------------------------------------------------------#
# TERMINATION
#--------------------------------------------------------------#
# Terminate the state of TARGET.
Term_MN($IF0, 1);

################################################################
__END__


