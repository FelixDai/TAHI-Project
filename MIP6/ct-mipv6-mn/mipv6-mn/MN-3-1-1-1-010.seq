#--------------------------------------------------------------#
# ENTRANCE
#--------------------------------------------------------------#
# Set the test version used for the display.
BEGIN { $V6evalTool::TestVersion = '$Name: MIPv6_4_0_5 $'; }

# Import the package.
use V6evalTool;
use mip6_mn_config;
use mip6_mn_common;
use mip6_mn_get;
use mip6_mn_send;
use mip6_mn_recv;
use mip6_mn_msg;

#--------------------------------------------------------------#
# INITIALIZATION
#--------------------------------------------------------------#
# Do the test satisfied the condition.
my @options = (
	'TEST_FUNC_BASIC',          'YES',                0,
	'TEST_STATE_NORMAL',        'YES',                0,
	'FUNC_DETAIL_HOME_ADDRESS', 'HOME_PREFIX_STATIC', 0,
	'FUNC_DETAIL_HOME_ADDRESS', 'STATIC',             0,
#kawa
#	'ENV_INITIALIZE',           'BOOT',               0,
);

# Initialize the state of TARGET.
Init_MN(@options);

#--------------------------------------------------------------#
# PREPARATION
#--------------------------------------------------------------#
# Prepare other local variables.
my @value;
my $sec;

#--------------------------------------------------------------#
# TEST PROCEDURE
#--------------------------------------------------------------#
# for test by not static.
# vSend_ra($IF0, 'ra_ha0lla_allnodemcast_sll_ha0_mtu_pfx_ha0ga_hainfo', 0);

#--------------------------------------------------------------#
# NUT starts at LinkX.
#--------------------------------------------------------------#
# for IKEv1
if (vRecv_to_establish_SA_at_LinkX($IF0, 'sa12_ha0') != 0) {
	$initcount ++;
	goto TERM;
}

# Receive Binding Update. (NUTX -> HA0)
# Send Binding Acknowledgement. (HA0 -> NUTX)
%packet_bu = vRecv_at_LinkX($IF0, $BU_TIME, 'bu_nutxga_ha0ga_hoa_nuthga');

#--------------------------------------------------------------#
# JUDGEMENT
#--------------------------------------------------------------#
if ($packet_bu{status} == 0) {
	vLogHTML_Pass("(*1)PASS: HA0 receives Binding Update.");
}
else {
	vLogHTML_Fail("(*1)FAIL: HA0 does not receive Binding Update.");
	$failcount ++;
	goto TERM;
}

%value_bu_addr = get_value_of_ipv6(0, \%packet_bu);

if ($value_bu_addr{Destination_HomeAddress} eq $node_hash{nuth_ga}) {
	vLogHTML_Pass("Home Address destination option is set to a static address.");
}
else {
	vLogHTML_Fail("FAIL: Home Address destination option is not set to a static address.");
	$failcount ++;
}

TERM:
#--------------------------------------------------------------#
# TERMINATION
#--------------------------------------------------------------#
# Terminate the state of TARGET.
Term_MN($IF0, 1);

################################################################
__END__


