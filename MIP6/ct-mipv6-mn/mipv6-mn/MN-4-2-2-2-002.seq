#--------------------------------------------------------------#
# ENTRANCE
#--------------------------------------------------------------#
# Set the test version used for the display.
BEGIN { $V6evalTool::TestVersion = '$Name: MIPv6_4_0_5 $'; }

# Import the package.
use V6evalTool;
use mip6_mn_config;
use mip6_mn_common;
use mip6_mn_get;
use mip6_mn_send;
use mip6_mn_recv;
use mip6_mn_msg;

#--------------------------------------------------------------#
# INITIALIZATION
#--------------------------------------------------------------#
# Do the test satisfied the condition.
my @options = (
	'TEST_STATE_ABNORMAL',           'YES',                0,
	'TEST_FUNC_RR',                  'YES',                0,
	'IPSEC_MANUAL_SA3_MN_HA0_PROTO', 'NONE',               0,
	'IPSEC_MANUAL_SA4_HA0_MN_PROTO', 'NONE',               0,
);

# Set the special environment
$MN_CONF{ENV_CN0_SET} = 'YES';

# Initialize the state of TARGET.
Init_MN(@options);

#--------------------------------------------------------------#
# PREPARATION
#--------------------------------------------------------------#
# Prepare other local variables.
my @value;
my $sec;

#--------------------------------------------------------------#
# TEST PROCEDURE
#--------------------------------------------------------------#
#--------------------------------------------------------------#
# NUT moves from Link0 to LinkX.
#--------------------------------------------------------------#
# Receive Binding Update. (NUTX -> HA0)
# Send Binding Acknowledgement. (HA0 -> NUTX)
%packet = vRecv_to_move_from_Link0_to_LinkX_w_all_SA($IF0);
if ($packet{status} != 0) {
	$initcount ++;
	goto TERM;
}

#--------------------------------------------------------------#
vLogHTML_Info("<B>CN0 sends ICMP Echo Request by tunneling.</B>");
#--------------------------------------------------------------#
# Send ICMP Echo Request. (out: HA0 -> NUTX, in: CN0 -> NUT0)
vSend_echorequest($IF0, 'echorequest_cn0ga_nuthga_tnl_ha0_nutx', 0);

# Receive Home Test Init. (out: NUTX -> HA0, in: NUT0 -> CN0)
# Receive Care-of Test Init. (NUTX -> CN0)
# Send Care-of Test. (CN0 -> NUTX)
$hoti_flag = 0;
$coti_flag = 0;
$echo_check = 0;
$now_time = time;
$end_time = $now_time + $RR_TIME;
while ($now_time < $end_time) {

	$sec = $end_time - $now_time;
	%packet = vRecv_at_LinkX($IF0, $sec,
		'hoti_nuthga_cn0ga_tnl_nutx_ha0',
		'coti_nutxga_cn0ga',
		'echoreply_nuthga_cn0ga_tnl_nutx_ha0');
	$now_time = time;

	if ($packet{recvFrame} eq 'hoti_nuthga_cn0ga_tnl_nutx_ha0') {
		$hoti_flag = 1;
		%packet_hoti = %packet;
		if ($coti_flag == 1) {
			last;
		}
	}
	elsif ($packet{recvFrame} eq 'coti_nutxga_cn0ga') {
		$coti_flag = 1;
		vSend_cot($IF0, 'cot_cn0ga_nutxga', \%packet);
		if ($hoti_flag == 1) {
			last;
		}
	}
	elsif ($packet{recvFrame} eq 'echoreply_nuthga_cn0ga_tnl_nutx_ha0') {
		$echo_check = 1;
	}
}
if (($hoti_flag == 0) || ($coti_flag == 0)) {
	vLogHTML_Fail("INIT FAIL: CN0 does not receive Home/Care-of Test Init.");
	$initcount ++;
	goto TERM;
}

#--------------------------------------------------------------#
vLogHTML_Info("<B>CN0 sends ICMP Parameter Problem(Code 1) for Home Test Init.</B>");
#--------------------------------------------------------------#
# Send ICMP Parameter Problem, Code 1. (out: HA0 -> NUTX, in: CN0 -> NUT0)
#   The Code field is set to 1.
%value_hoti = get_value_of_hoti(0, \%packet_hoti);
@value = (
	'ICMP_Code',         1,
	'PAR_PROB_POINTER',  6,
	'HOTI_Reserved1',    0,
	'HOTI_Reserved2',    0,
	'HOTI_HOTCOOKIE',   "\\\"$value_hoti{InitCookie}\\\"");
vSend_icmp6_pp($IF0, 'icmp6_pp_cn0ga_nuthga_pay_hoti_tnl_ha0_nutx', \%packet_hoti, @value);
vCPP('');

# Receive ICMP Echo Reply. (out: NUTX -> HA0, in: NUT0 -> CN0)
if ($echo_check == 0) {
	%packet = vRecv_at_LinkX($IF0, $ECHO_TIME, 'echoreply_nuthga_cn0ga_tnl_nutx_ha0');
	if ($packet{status} != 0) {
		vLogHTML_Fail("INIT FAIL: CN0 does not receive ICMP Echo Reply by reverse tunneling.");
		$initcount ++;
		goto TERM;
	}
}

#--------------------------------------------------------------#
vLogHTML_Info("<B>CN0 sends ICMP Echo Request by tunneling.</B>");
#--------------------------------------------------------------#
# Send ICMP Echo Request. (out: HA0 -> NUTX, in: CN0 -> NUT0)
vSend_echorequest($IF0, 'echorequest_cn0ga_nuthga_tnl_ha0_nutx', 0);

# Receive ICMP Echo Reply. (out: NUTX -> HA0, in: NUT0 -> CN0)
%packet = vRecv_at_LinkX($IF0, $ECHO_TIME,
	'echoreply_nuthga_cn0ga_tnl_nutx_ha0',
	'hoti_nuthga_cn0ga_tnl_nutx_ha0');

#--------------------------------------------------------------#
# JUDGEMENT
#--------------------------------------------------------------#
if ($packet{recvFrame} eq 'echoreply_nuthga_cn0ga_tnl_nutx_ha0') {
	vLogHTML_Pass("(*1) PASS: CN0 receives ICMP Echo Reply by reverse tunneling.");
}
else {
	vLogHTML_Fail("(*1) FAIL: CN0 does not receive ICMP Echo Reply by reverse tunneling.");
	$failcount ++;
}

TERM:
#--------------------------------------------------------------#
# TERMINATION
#--------------------------------------------------------------#
# Terminate the state of TARGET.
Term_MN($IF0, 1);

################################################################
__END__


