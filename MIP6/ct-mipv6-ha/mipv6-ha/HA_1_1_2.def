#include "./config.def"

#if ROTATE_HOA
#define MN_MAC	"00:00:00:00:00:04"
#endif	// ROTATE_HOA

#include "./mipv6.def"


FEM_icmp6_echo_request_exth(
	local_bu,
	_HETHER_rx2nut,
	{
		HopLimit	= 64;
		_SRC(v6merge(CARE_OF_PREFIX, CARE_OF_PREFIXLEN, v6ether(MN_MAC)));
		_DST(nut2v6(HOME_PREFIX, HOME_PREFIXLEN, HA_HOME_LINK));
	},
	{
		header	= _HDR_IPV6_NAME(local_bu);
		exthdr	= ext_homeaddress;
		exthdr	= ext_bu;
		upper	= _ICMPV6_NAME(local_bu);
	},
	{
		payload	= payload8;
	}
)


FEM_icmp6_parameter_problem_exth(
	local_icmp_error,
	_HETHER_nut2rx,
	{
		_SRC(nut2v6(HOME_PREFIX, HOME_PREFIXLEN, HA_HOME_LINK));
		_DST(v6merge(CARE_OF_PREFIX, CARE_OF_PREFIXLEN, v6ether(MN_MAC)));
	},
	{
		header	= _HDR_IPV6_NAME(local_icmp_error);
		upper	= _ICMPV6_NAME(local_icmp_error);
	},
	{
		Code	= 0;
		Pointer	= 64;
		payload	= data_local_bu;
	}
)


Payload data_local_bu {
	data	= left(_PACKET_IPV6_NAME(local_bu), 112);
}
