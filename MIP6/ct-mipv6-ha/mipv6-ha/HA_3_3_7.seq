BEGIN {}
END   {}

use mipv6;

my @movement	= ('USE_LINK0X',	'USE_LINK0X');

my @bu_sequence	= (15,			14);
my @bu_a_bit	= (1,			1);
my @bu_h_bit	= (1,			1);
my @bu_l_bit	= (0,			0);
my @bu_k_bit	= (0,			0);
my @bu_lifetime	= (0x0069,		0x0069);
my @bu_use_hao	= ($true,		$false);

my @ba_status	= (0,			135);
my @ba_k_bit	= (0,			0);
my @ba_sequence	= ($bu_sequence[0],	$bu_sequence[0]);
my @ba_lifetime	= ($bu_lifetime[0],	-1);

my @bool	= ($true,		$true);



unless(mipv6init($movement[0])) {
	exitInitFail();
}



vLogHTML('<FONT COLOR="#FF0000" SIZE="5"><U><B>TEST PROCEDURE'.
	'</B></U></FONT><BR>');



#----------------------------------------------#
# 10.3.1. Primary Care-of Address Registration #
#----------------------------------------------#

unless(
	mipv6registration(
		$movement[0],
		$bu_sequence[0],
		$bu_a_bit[0],
		$bu_h_bit[0],
		$bu_l_bit[0],
		$bu_k_bit[0],
		$bu_lifetime[0],
		$ba_status[0],
		$ba_k_bit[0],
		$ba_sequence[0],
		$ba_lifetime[0]
	)
) {
	exitFail();
}

unless(binding_confirmation($movement[0], $bool[0])) {
	exitFail();
}



#------------------------------------------------------#
# 10.3.2. Primary Care-of Address De-Registration      #
#------------------------------------------------------#

unless(
	mipv6de_registration(
		$bu_sequence[1],
		$bu_a_bit[1],
		$bu_h_bit[1],
		$bu_l_bit[1],
		$bu_k_bit[1],
		$bu_lifetime[1],
		$bu_use_hao[1],
		$ba_status[1],
		$ba_k_bit[1],
		$ba_sequence[1],
		$ba_lifetime[1]
	)
) {
	exitFail();
}

unless(binding_confirmation($movement[1], $bool[1])) {
	exitFail();
}

exitPass();



#
# perldoc
#
