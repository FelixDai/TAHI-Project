//-----------------------------------------------------------------------------
// HUT0 -> All MLDv2-capable routers, MLDv2 Report IS_EX(HUT0 solicited-node multicast,{NULL}) and IS_IN(M1,{S1})
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2report_exth(
	MLDv2R_hut0l_mld2r_r2_t2hut0sn0_t1m1n1s1,
	_HETHER_hut0_to_mld2r,
	{
		HopLimit        = HUT_MLDR_HOP;
		_SRC(HUT0_LLOCAL_UCAST);
		_DST(MLDv2_ROUTERS_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2R_hut0l_mld2r_r2_t2hut0sn0_t1m1n1s1);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2R_hut0l_mld2r_r2_t2hut0sn0_t1m1n1s1);
	},
	{
		Type                    = MLDv2R_TYPE;
		Code                    = HUT_MLDv2R_CODE;
		Checksum                = HUT_MLDv2R_CHECKSUM;
		Reserved                = HUT_MLDv2R_RESERVED;
		NumOfMcastAddrRecords   = 2;
		MLDv2_AddrRecord        = comb (mld2_rcd_t2hut0sn0,
		                                mld2_rcd_t1m1n1s1);
	}
)

