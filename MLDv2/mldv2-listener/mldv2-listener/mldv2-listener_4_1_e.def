#include "MLDv2L.def"

//-----------------------------------------------------------------------------
// TR2 -> All Nodes Address, MLDv2 Query (G)
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2query_exth (
	MLDv2Q_tr2l_allnodes_m0,
	_HETHER_tr2_to_allnodes,
	{
		HopLimit        = MLDQ_HOP;
		_SRC(TR2_LLOCAL_UCAST);
		_DST(ALL_NODES_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2Q_tr2l_allnodes_m0);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2Q_tr2l_allnodes_m0);
	},
	{
		Type                = MLDQ_TYPE;
		Code                = MLDQ_CODE;
		Checksum            = MLDQ_CHECKSUM;
		MaxResponseDelay    = MLDQG_MRD;
		Reserved            = MLDQ_RESERVED;
		MulticastAddress    = MLDQG_MCADDR;
		Resv                = MLDQ_RESV;
		SFlag               = MLDQ_S_FLAG;
		QRV                 = MLDQ_QRV;
		QQIC                = MLDQ_QQIC;
		NumOfSources        = 0;
	}
)

