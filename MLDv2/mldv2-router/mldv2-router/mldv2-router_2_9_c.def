#include "MLDv2R.def"

//-----------------------------------------------------------------------------
// TN1 -> All MLDv2-capable routers, MLDv2 Report IS_IN(M1,{S1}) with a Hop Limit of 0xff.
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2report_exth(
	MLDv2R_tn1l_mld2r_r1_t1m1n1s1_hopff,
	_HETHER_tn1_to_mld2r,
	{
		HopLimit        = 0xff; // (unusual)
		_SRC(TN1_LLOCAL_UCAST);
		_DST(MLDv2_ROUTERS_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2R_tn1l_mld2r_r1_t1m1n1s1_hopff);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2R_tn1l_mld2r_r1_t1m1n1s1_hopff);
	},
	{
		Type                    = MLDv2R_TYPE;
		Code                    = MLDv2R_CODE;  // as Reserved
		Checksum                = MLDv2R_CHECKSUM;
		Reserved                = MLDv2R_RESERVED;
		NumOfMcastAddrRecords   = 1;
		MLDv2_AddrRecord        = mld2_rcd_t1m1n1s1;
	}
)

