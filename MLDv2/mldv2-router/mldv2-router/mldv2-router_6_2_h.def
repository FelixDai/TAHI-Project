#include "MLDv2R.def"

//-----------------------------------------------------------------------------
// TN1 -> All MLDv2-capable routers, MLDv2 Report TO_EX(SSM2,{null}) TO_IN(SSM1,{S1})
//-----------------------------------------------------------------------------
// TO_EX(SSM2,{null})
MLDv2_AddrRecord mld2_rcd_t4ssm2n0 {
	Type                = 4;
	AuxDataLen          = 0;
	NumOfSources        = 0;
	MulticastAddress    = SSMCAST2_ADDR;
}

// TO_IN(SSM1,{S1})
MLDv2_AddrRecord mld2_rcd_t3ssm1n1s1 {
	Type                = 3;
	AuxDataLen          = 0;
	NumOfSources        = 1;
	MulticastAddress    = SSMCAST1_ADDR;
	SourceAddress       = MSRC_01;
}

FEM_icmp6_mldv2report_exth(
	MLDv2R_tn1l_mld2r_r2_t4ssm2n0_t3ssm1n1s1,
	_HETHER_tn1_to_mld2r,
	{
		HopLimit        = MLDv2R_HOP;
		_SRC(TN1_LLOCAL_UCAST);
		_DST(MLDv2_ROUTERS_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2R_tn1l_mld2r_r2_t4ssm2n0_t3ssm1n1s1);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2R_tn1l_mld2r_r2_t4ssm2n0_t3ssm1n1s1);
	},
	{
		Type                    = MLDv2R_TYPE;
		Code                    = MLDv2R_CODE;  // as Reserved
		Checksum                = MLDv2R_CHECKSUM;
		NumOfMcastAddrRecords   = 2;
		MLDv2_AddrRecord        = mld2_rcd_t4ssm2n0;
		MLDv2_AddrRecord        = mld2_rcd_t3ssm1n1s1;
	}
)

//-----------------------------------------------------------------------------
// TN1 -> All MLDv2-capable routers, MLDv2 Report TO_IN(SSM1,{null})
//-----------------------------------------------------------------------------
// TO_IN(SSM1,{null})
MLDv2_AddrRecord mld2_rcd_t3ssm1n0 {
	Type                = 3;
	AuxDataLen          = 0;
	NumOfSources        = 0;
	MulticastAddress    = SSMCAST1_ADDR;
}

FEM_icmp6_mldv2report_exth(
	MLDv2R_tn1l_mld2r_r1_t3ssm1n0,
	_HETHER_tn1_to_mld2r,
	{
		HopLimit        = MLDv2R_HOP;
		_SRC(TN1_LLOCAL_UCAST);
		_DST(MLDv2_ROUTERS_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2R_tn1l_mld2r_r1_t3ssm1n0);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2R_tn1l_mld2r_r1_t3ssm1n0);
	},
	{
		Type                    = MLDv2R_TYPE;
		Code                    = MLDv2R_CODE;  // as Reserved
		Checksum                = MLDv2R_CHECKSUM;
		NumOfMcastAddrRecords   = 1;
		MLDv2_AddrRecord        = mld2_rcd_t3ssm1n0;
	}
)

//-----------------------------------------------------------------------------
// RUT0 -> SSM1, MLDv2 Query (SSM1,{S1})
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2query_exth (
	MLDv2Q_rut0l_ssmcast1_ssm1n1s1,
	_HETHER_rut0_to_ssmcast1,
	{
		HopLimit        = MLDQ_HOP;
		_SRC(RUT0_LLOCAL_UCAST);
		_DST(SSMCAST1_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2Q_rut0l_ssmcast1_ssm1n1s1);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2Q_rut0l_ssmcast1_ssm1n1s1);
	},
	{
		Type                = MLDQ_TYPE;
		Code                = RUT_MLDQ_CODE;
		Checksum            = RUT_MLDQ_CHECKSUM;
		MaxResponseDelay   <= RUT_MLDQM_MRD;
		Reserved            = RUT_MLDQ_RESERVED;
		MulticastAddress    = SSMCAST1_ADDR;
		Resv                = RUT_MLDQ_RESV;
		SFlag               = RUT_MLDQ_S_FLAG;
		QRV                 = RUT_MLDQ_QRV;
		QQIC                = RUT_MLDQ_QQIC;
		NumOfSources        = 1;
		SourceAddress       = MSRC_01;
	}
)

