#include "MLDv2R.def"

//-----------------------------------------------------------------------------
// RUT0 -> M1, MLDv2 Query (M1,{S2}) with S Flag on.
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2query_exth (
	MLDv2Q_rut0l_mcast1_m1n1s2_s1,
	_HETHER_rut0_to_mcast1,
	{
		HopLimit        = MLDQ_HOP;
		_SRC(RUT0_LLOCAL_UCAST);
		_DST(MCAST1_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2Q_rut0l_mcast1_m1n1s2_s1);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2Q_rut0l_mcast1_m1n1s2_s1);
	},
	{
		Type                = MLDQ_TYPE;
		Code                = RUT_MLDQ_CODE;
		Checksum            = RUT_MLDQ_CHECKSUM;
		MaxResponseDelay   <= RUT_MLDQM_MRD;
		Reserved            = RUT_MLDQ_RESERVED;
		MulticastAddress    = MLDQM_MCADDR;
		Resv                = RUT_MLDQ_RESV;
		SFlag               = 1;
		QRV                 = RUT_MLDQ_QRV;
		QQIC                = RUT_MLDQ_QQIC;
		NumOfSources        = 1;
		SourceAddress       = MSRC_02;
	}
)

