#include "MLDv2R.def"

//-----------------------------------------------------------------------------
// TR1 -> All MLDv2-capable routers, MLDv2 Query (M2,{S1}).
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2query_exth (
	MLDv2Q_tr1l_mcast2_m2n1s1,
	_HETHER_tr1_to_mcast2,
	{
		HopLimit        = MLDQ_HOP;
		_SRC(TR1_LLOCAL_UCAST);
		_DST(MCAST2_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2Q_tr1l_mcast2_m2n1s1);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2Q_tr1l_mcast2_m2n1s1);
	},
	{
		Type                = MLDQ_TYPE;
		Code                = MLDQ_CODE;
		Checksum            = MLDQ_CHECKSUM;
		MaxResponseDelay    = MLDQM_MRD;
		Reserved            = MLDQ_RESERVED;
		MulticastAddress    = MCAST2_ADDR;
		Resv                = MLDQ_RESV;
		SFlag               = MLDQ_S_FLAG;
		QRV                 = MLDQ_QRV;
		QQIC                = MLDQ_QQIC;
		NumOfSources        = 1;
		SourceAddress       = MSRC_01;
	}
)

//-----------------------------------------------------------------------------
// RUT0 -> All MLDv2-capable routers, MLDv2 Report IS_IN(M2,{S1})
//-----------------------------------------------------------------------------
FEM_icmp6_mldv2report_exth(
	MLDv2R_rut0l_mld2r_r1_t1m2n1s1,
	_HETHER_rut0_to_mld2r,
	{
		HopLimit        = MLDv2R_HOP;
		_SRC(RUT0_LLOCAL_UCAST);
		_DST(MLDv2_ROUTERS_ADDR);
	},
	{
		header  = _HDR_IPV6_NAME(MLDv2R_rut0l_mld2r_r1_t1m2n1s1);
		exthdr  = ext_hbh_rtalert_mld;
		upper   = _ICMPV6_NAME(MLDv2R_rut0l_mld2r_r1_t1m2n1s1);
	},
	{
		Type                    = MLDv2R_TYPE;
		Code                    = RUT_MLDv2R_CODE;  // as Reserved
		Checksum                = RUT_MLDv2R_CHECKSUM;
		Reserved                = RUT_MLDv2R_RESERVED;
		NumOfMcastAddrRecords   = 1;
		MLDv2_AddrRecord        = mld2_rcd_t1m2n1s1;
	}
)

