#ifndef __PACKET_SGW_SGW_DEF__
#define __PACKET_SGW_SGW_DEF__

#include "./CPP.def"



//
// ICMPv6 Echo Request
//

FEM_icmp6_echo_request(
	ereq,
	_HETHER_nut2tn,
	{
		_SRC(v6(CPP_IP_TH2_LINKY));
		_DST(v6(CPP_IP_TH1_LINKB));
	},
	{
		Identifier	= CPP_ECHO_ID;
		SequenceNumber	= CPP_ECHO_SEQ;
		payload	= echo_data;
	}
)

FEM_icmp6_echo_request(
	ereq_th3,
	_HETHER_nut2tn,
	{
		_SRC(v6(CPP_IP_TH3_LINKY));
		_DST(v6(CPP_IP_TH1_LINKB));
	},
	{
		Identifier	= CPP_ECHO_ID;
		SequenceNumber	= CPP_ECHO_SEQ;
		payload	= echo_data;
	}
)



//
// ICMPv6 Echo Reply
//

FEM_icmp6_echo_reply(
	erep,
	_HETHER_tn2nut,
	{
		_SRC(v6(CPP_IP_TH1_LINKB));
		_DST(v6(CPP_IP_TH2_LINKY));
	},
	{
		Identifier	= CPP_ECHO_ID;
		SequenceNumber	= CPP_ECHO_SEQ;
		payload	= echo_data;
	}
)

FEM_icmp6_echo_reply(
	erep_th3,
	_HETHER_tn2nut,
	{
		_SRC(v6(CPP_IP_TH1_LINKB));
		_DST(v6(CPP_IP_TH3_LINKY));
	},
	{
		Identifier	= CPP_ECHO_ID;
		SequenceNumber	= CPP_ECHO_SEQ;
		payload	= echo_data;
	}
)



//
// ICMPv6 Echo Request to initiate KINK exchange for SGW NUT
//

FEM_icmp6_echo_request(
	ereq_initiate,
	_HETHER_tn2nut,
	{
		_SRC(v6(CPP_IP_TH1_LINKB));
		_DST(v6(CPP_IP_TH2_LINKY));
	},
	{
		Identifier	= CPP_ECHO_ID;
		SequenceNumber	= CPP_ECHO_SEQ;
		payload	= echo_data;
	}
)



#include "./Tunnel.def"
#include "./IPsec.def"
#include "./ICMPv6.def"

#endif	// __PACKET_SGW_SGW_DEF__
