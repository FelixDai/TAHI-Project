	# remove payload without HDR
	@local_ike_sa_init_resp = grep {
			my $ret = 0;
			if ($_->{'self'} eq 'HDR') { $ret = 1; }
			$ret;
		} @local_ike_sa_init_resp;

	foreach my $payload (@local_ike_sa_init_resp) {
		if ($payload->{'self'} eq 'HDR') {
			$payload->{'respSPI'} = '0000000000000000';
