	}
)




#ifndef ESP_TO_HOST1
#define ESP_TO_HOST1 esp_to_host
#endif

FEM_icmp6_echo_reply_exth(
	echo_reply_to_host1_esp,
	hether_nut2router,
	{
		_SRC(v6(IPSEC_NUT_NET0_ADDR));
		_DST(v6(IPSEC_HOST1_NET1_ADDR));
	},
	{
		header = _HDR_IPV6_NAME(echo_reply_to_host1_esp);
