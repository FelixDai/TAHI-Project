FEM_icmp6_echo_request(
	echo_request_from_host1_net0_to_host2_net3_via_nut,
	hether_host2nut,
	{
		_SRC(v6(IPSEC_HOST1_NET0_ADDR));
		_DST(v6(IPSEC_HOST2_NET3_ADDR));
	},
	{
