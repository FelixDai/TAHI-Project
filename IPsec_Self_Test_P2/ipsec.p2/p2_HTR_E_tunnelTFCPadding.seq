BEGIN
{
	$V6evalTool::TestVersion = '$Name: V6PC_P2_IPsec_1_10_0 $ ';
}

use V6evalTool;
use IPSEC;

require './keys.pl';

######################################################################
#----- get sequence arguments
foreach (@ARGV) {
	# APPLICATION TYPE
	/^app_type=(\S+)/	&& do {$IPSEC::APP_TYPE=$1;	next; };

	# ENCAPSULATION MODE 
	/^emode=(\S+)/	&& do {$EMODE=$1;	next; };

	# ESP ENCRYPTION ALGORITHM FOR INBOUND PACKET
	/^ealgo_from=(\S+)/	&& do {$EALGO_FROM=$1;	next; };

	# ESP ENCRYPTION ALGORITHM FOR OUTBOUND PACKET
	/^ealgo_to=(\S+)/	&& do {$EALGO_TO=$1;	next; };

	# ESP ENCRYPTION ALGORITHM PACKET
	/^ealgo=(\S+)/	&& do {$EALGO=$1; next; };

	# ESP with AUTHENTICATION ALGORITHM FOR INBOUND PACKET
	/^eauth=(\S+)/	&& do {$EAUTH=$1;	next; };

	# ESP ENCRYPTION KEY FOR INBOUND PACKET
	/^einkey=(\S+)/	&& do {$E_IN_KEY=$$1;	next; };

	# ESP ENCRYPTION KEY FOR OUTBOUND PACKET
	/^eoutkey=(\S+)/	&& do {$E_OUT_KEY=$$1;	next; };

	# AH KEY FOR INBOUND PACKET
	/^ainkey=(\S+)/	&& do {$A_IN_KEY=$$1;	next; };

	# AH KEY FOR OUTBOUND PACKET
	/^aoutkey=(\S+)/	&& do {$A_OUT_KEY=$$1;	next; };

	# TEST TYPE
	/^test_type=(\S+)/	&& do {$TEST_TYPE=$1;	next; };

	# SUPPORT FUNCTION CHECK
	/^support=(\S+)/	&& do {$SUPPORT=$1;	next; };

	seqERROR("Unknown sequence option '$_'");
}
######################################################################
$IPSEC::pktdesc{
	'esptun_from_sg1_net1_echo_request_from_host1_net2_to_host0_net0'}
		= 'Send Echo Request from HOST-1(TN) via SGW(TN) w/ Encapsulated';
$IPSEC::pktdesc{
	'esptun_to_sg1_net1_echo_reply_from_host0_net0_to_host1_net2'}
		= 'Receive Echo Reply from End-Node(NUT) w/ Encapsulated';

$IF = Link0;

#----- check NUT type
ipsecCheckNUT(host, $TEST_TYPE, $SUPPORT);
ipsecCheckNUT(host, $TEST_TYPE, 'TUNNEL_MODE_WITH_SGW_SUPPORT');

#----- Initialize target SAD,SPD 
vLogHTML("<FONT SIZE=3>*** Target initialization phase ***</FONT><BR>"); 
ipsecClearAll();

#----- start capturing
vCapture($IF);

#----- Set Algorithms
vCPP("-DEALGO_FROM_SGW1_NET1=$EALGO_FROM -DEALGO_TO_SGW1_NET1=$EALGO_TO");

#----- Set SAD,SPD
vLog("Inbound KEY is $E_IN_KEY, Outbound KEY is $E_OUT_KEY");
vLog("Inbound Auth KEY is $A_IN_KEY, Outbound Auth KEY is $A_OUT_KEY");
## SGW1 vs NUT, Inbound
ipsecSetSAD(
	"src=$IPSEC::IPsecAddr{IPSEC_SGW1_NET1_ADDR}",
	"dst=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"spi=0x1000",
	"mode=$EMODE",
	"protocol=esp",
	"ealgo=$EALGO",
	"ealgokey=$E_IN_KEY",
	"eauth=$EAUTH",
	"eauthkey=$A_IN_KEY",
	"nsrc=$IPSEC::IPsecAddr{IPSEC_NET2_ADDR}",
	"ndst=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
);

ipsecSetSPD(
	"tsrc=$IPSEC::IPsecAddr{IPSEC_SGW1_NET1_ADDR}",
	"tdst=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"src=$IPSEC::IPsecAddr{IPSEC_NET2_ADDR}",
	"dst=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"upperspec=any",
	"direction=in",
	"protocol=esp-auth",
	"mode=$EMODE",
);

## SGW1 vs NUT, Outbound
ipsecSetSAD(
	"src=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"dst=$IPSEC::IPsecAddr{IPSEC_SGW1_NET1_ADDR}",
	"spi=0x2000",
	"mode=$EMODE",
	"protocol=esp",
	"ealgo=$EALGO",
	"ealgokey=$E_OUT_KEY",
	"eauth=$EAUTH",
	"eauthkey=$A_OUT_KEY",
	"nsrc=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"ndst=$IPSEC::IPsecAddr{IPSEC_NET2_ADDR}",
);

ipsecSetSPD(
	"tsrc=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"tdst=$IPSEC::IPsecAddr{IPSEC_SGW1_NET1_ADDR}",
	"src=$IPSEC::IPsecAddr{IPSEC_NUT_NET0_ADDR}",
	"dst=$IPSEC::IPsecAddr{IPSEC_NET2_ADDR}",
	"upperspec=any",
	"direction=out",
	"protocol=esp-auth",
	"mode=$EMODE",
);

## Enable IPsec
ipsecEnable();

#======================================================================
vLogHTML("<FONT SIZE=3>*** Target testing phase ***<FONT><BR>");

# ping TN(Host-1) <-> NUT(End-Node)

($stat, %ret) = ipsecPing2NUT($IF,
	'esptun_from_sg1_net1_echo_request_from_host1_net2_to_host0_net0_tfc',
	'esptun_to_sg1_net1_echo_reply_from_host0_net0_to_host1_net2');

if($stat ne 'GOT_REPLY') {
	vLogHTML("TN received no echo reply from End-Node(NUT) to HOST-1(TN).<BR>");
	vClear($IF);
	ipsecExitFail();
}

vLogHTML("TN received echo reply from End-Node(NUT) to Host-1.<BR>");
vLogHTML("<FONT COLOR=\"#006600\">Judgement #1: Tunnel Mode with SGW is OK</FONT><BR>");

#----- End capturing
vStop($IF);
ipsecExitPass();

######################################################################
__END__

=head1 NAME

  p2_HTR_E_tunnelwSGW
        - Tunnel Mode with SGW
        - End-Node Tunnel Mode with SGW ESP 3DES-CBC with HMAC-SHA1 authentication

=head1 TARGET

  End-Node

=head1 SYNOPSIS

=begin html
<PRE>
ICMP Case:
  <A HREF="./p2_HTR_E_tunnelwSGW.seq">p2_HTR_E_tunnelwSGW.seq</A> [-tooloption ...] -pkt <A HREF="./p2_HTR_E_ICMP_common.def">p2_HTR_E_ICMP_common.def</A>
    -tooloption : v6eval tool option
  See also <A HREF="./p2_HTR_ICMP_common.def">p2_HTR_ICMP_common.def</A>
  See also <A HREF="./p2_ALGO_common.def">p2_ALGO_common.def</A>
<BR>
UDP Case:
  <A HREF="./p2_HTR_E_tunnelwSGW.seq">p2_HTR_E_tunnelwSGW.seq</A> [-tooloption ...] -pkt <A HREF="./p2_HTR_E_UDP_common.def">p2_HTR_E_UDP_common.def</A>
    -tooloption : v6eval tool option
  See also <A HREF="./p2_HTR_UDP_common.def">p2_HTR_UDP_common.def</A>
  See also <A HREF="./p2_ALGO_common.def">p2_ALGO_common.def</A>
<BR>
Parameters:
  test_type=ADVANCED
  support=TUNNEL_MODE_WITH_SGW_SUPPORT (See <A HREF="./p2_ipsec_config">p2_ipsec_config</A>)
  ealgo=3des-cbc
  eauth=hmac-sha1
  einkey=encryption key name for incoming packet (See <A HREF="./keys.pl">keys.pl</A> or <A HREF="./keys.def">keys.def</A>)
  ainkey=authentication key name for incoming packet (See <A HREF="./keys.pl">keys.pl</A> or <A HREF="./keys.def">keys.def</A>)
  eoutkey=encryption key name for outgoing packet (See <A HREF="./keys.pl">keys.pl</A> or <A HREF="./keys.def">keys.def</A>)
  aoutkey=authentication key name for incoming packet (See <A HREF="./keys.pl">keys.pl</A> or <A HREF="./keys.def">keys.def</A>)
  ealgo_from=packet define name for incoming packet (e.g., ealgo_3descbc_hmacsha1_in) (See <A HREF="./p2_ALGO_common.def">p2_ALGO_common.def</A>)
  ealgo_to=packet define name for outgoing packet (e.g., ealgo_3descbc_hmacsha1_out) (See <A HREF="./p2_ALGO_common.def">p2_ALGO_common.def</A>)
</PRE>

=end html

