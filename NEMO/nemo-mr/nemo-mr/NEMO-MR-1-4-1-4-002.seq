#--------------------------------------------------------------#
# ENTRANCE
#--------------------------------------------------------------#
# Set the test version used for the display.
BEGIN { $V6evalTool::TestVersion = '$Name: NEMO_1_0_2 $'; }

# Import the package.
use V6evalTool;
use mip6_mn_config;
use mip6_mn_common;
use mip6_mn_get;
use mip6_mn_send;
use mip6_mn_recv;
use mip6_mn_msg;

#--------------------------------------------------------------#
# INITIALIZATION
#--------------------------------------------------------------#
# Do the test satisfied the condition.
my @options = (
	'TEST_STATE_NORMAL',           'YES',                0,
	'TEST_FUNC_BASIC',             'YES',                0,
	'TEST_FUNC_REAL_HOME_LINK',    'YES',                0,
);

# Initialize the state of TARGET.
Init_MN(@options);

#--------------------------------------------------------------#
# PREPARATION
#--------------------------------------------------------------#
# Prepare other variables.
my @value;
my $sec;

#--------------------------------------------------------------#
# TEST PROCEDURE
#--------------------------------------------------------------#
#--------------------------------------------------------------#
# NUT starts at Link0.
#--------------------------------------------------------------#
# Send Router Advertisement. (HA0 -> HA0_allnode_multi)
vRecv_at_Link0($IF0, $FIRST_RA_TIME);

#--------------------------------------------------------------#
# Send Neighbor Solicitation. (0 -> NUT0)
#--------------------------------------------------------------#
%packet_na = vRecv_to_NA($DAD_TIME, 'ns_0_nut0sol_tgt_nut0lla', 1);

JUDGE_1:
#--------------------------------------------------------------#
# JUDGEMENT
#--------------------------------------------------------------#
if($packet_na{status} != 0){
	vLogHTML_Fail("(*1) FAIL: HA0 does not receive Neighbor Advertisement from Mobile Router.");
	$failcount ++;
}
else{
	vLogHTML_Pass("(*1) PASS: HA0 receives Neighbor Advertisement from Mobile Router.");

	%value_na = get_value_of_na(0,\%packet_na);
	if($value_na{RFlag} == 0){
		vLogHTML_Fail("FAIL: The Router flag (R) is set to 0");
		$failcount ++;
	}
	else{
		vLogHTML_Pass("The Router flag (R) is set to 1");
	}
}

TERM:
#--------------------------------------------------------------#
# TERMINATION
#--------------------------------------------------------------#
# Terminate the state of TARGET.
Term_MN($IF0, 1);

################################################################
__END__


