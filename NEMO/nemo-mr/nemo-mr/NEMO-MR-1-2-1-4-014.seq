#--------------------------------------------------------------#
# ENTRANCE
#--------------------------------------------------------------#
# Set the test version used for the display.
BEGIN { $V6evalTool::TestVersion = '$Name: NEMO_1_0_2 $'; }

# Import the package.
use V6evalTool;
use mip6_mn_config;
use mip6_mn_common;
use mip6_mn_get;
use mip6_mn_send;
use mip6_mn_recv;
use mip6_mn_msg;

#--------------------------------------------------------------#
# INITIALIZATION
#--------------------------------------------------------------#
# Do the test satisfied the condition.
my @options = (
	'TEST_STATE_NORMAL',           'YES',                0,
	'TEST_FUNC_BASIC',             'YES',                0,
	'TEST_FUNC_REAL_HOME_LINK',    'YES',                0,
	'TEST_FUNC_RA_SEND_HOME_LINK', 'YES',                 0,
);

# Initialize the state of TARGET.
Init_MN(@options);

#--------------------------------------------------------------#
# PREPARATION
#--------------------------------------------------------------#
# Prepare other variables.
my @value;
my $sec;

#--------------------------------------------------------------#
# TEST PROCEDURE
#--------------------------------------------------------------#
#--------------------------------------------------------------#
# NUT moves from Link0 to LinkX.
#--------------------------------------------------------------#
@HA_BA_VALUE = ('BA_Status', 0, 'BA_Rflag', 1);
%packet = vRecv_to_move_from_Link0_to_LinkX($IF0);

if ($packet{status} != 0) {
	$initcount ++;
	goto TERM;
}

# for IKE
if (vRecv_to_establish_all_SA_at_LinkX($IF0) != 0) {
	$initcount ++;
	goto TERM;
}

# interval
vRecv_at_LinkX($IF0, $MinDelayBetweenRAs);

#--------------------------------------------------------------#
# NUT moves from LinkX to Link0.
#--------------------------------------------------------------#
%packet = vRecv_to_move_from_LinkX_to_Link0($IF0);

if ($packet{status} != 0) {
	$initcount ++;
	goto TERM;
}

#--------------------------------------------------------------#
# Send Router Solicitation. (NODE0 -> NUT0)
#--------------------------------------------------------------#
%packet_ra = vRecv_to_RA($DAD_TIME, 'rs_node0ga_nut0ga_opt_sll_node0', 1);

JUDGE_1:
#--------------------------------------------------------------#
# JUDGEMENT
#--------------------------------------------------------------#
if($packet_ra{status} != 0){
	vLogHTML_Fail("(*1) FAIL: NODE0 does not receive Router Advertisement from Mobile Router.");
	$failcount ++;
}
else{
	vLogHTML_Pass("(*1) PASS: NODE0 receives Router Advertisement from Mobile Router.");

	%value_ra = get_value_of_ra(0,\%packet_ra);
	if($value_ra{LifeTime} != 0){
		vLogHTML_Fail(" - The Router Lifetime field is not set to 0.");
		$failcount ++;
	}
	else{
		vLogHTML_Pass(" - The Router Lifetime field is set to 0.");
	}
}

TERM:
#--------------------------------------------------------------#
# TERMINATION
#--------------------------------------------------------------#
# Terminate the state of TARGET.
Term_MN($IF0, 1);

################################################################
__END__


