#--------------------------------------------------------------#
# ENTRANCE
#--------------------------------------------------------------#
# Set the test version used for the display.
BEGIN { $V6evalTool::TestVersion = '$Name: NEMO_1_0_2 $'; }

# Import the package.
use V6evalTool;
use mip6_mn_config;
use mip6_mn_common;
use mip6_mn_get;
use mip6_mn_send;
use mip6_mn_recv;
use mip6_mn_msg;

#--------------------------------------------------------------#
# INITIALIZATION
#--------------------------------------------------------------#
# Do the test satisfied the condition.
my @options = (
	'TEST_STATE_ABNORMAL',      'YES',  0,
	'TEST_FUNC_BASIC',          'YES',  0,
	'TEST_FUNC_REAL_HOME_LINK', 'YES',  0,
	'TEST_FUNC_DHAAD',          'YES',  0,
#	'ENV_INITIALIZE',           'BOOT', 0,
);

# Set the special environment
$MN_CONF{ENV_HA1_SET} = 'YES';

# Initialize the state of TARGET.
Init_MN(@options);

#--------------------------------------------------------------#
# PREPARATION
#--------------------------------------------------------------#
# Prepare other variables.
my @value;
my $sec;

#--------------------------------------------------------------#
# TEST PROCEDURE
#--------------------------------------------------------------#
#--------------------------------------------------------------#
# NUT starts at Link0.
#--------------------------------------------------------------#
# Send Router Advertisement. (HA0 -> HA0_allnode_multi)
#   The Home Agent (H) bit is clear.
vRecv_at_Link0_NonHA($IF0, $FIRST_RA_TIME);

#--------------------------------------------------------------#
# NUT moves from Link0 to LinkX.
#--------------------------------------------------------------#
# Receive Binding Update. (NUTX -> HA0)
# Send Binding Acknowledgement. (HA0 -> NUTX)
#   The Status field is set to 1(Binding Update accepted).
#   The Mobile Router Flag (R) is set to 0.

@HA_BA_VALUE = ('BA_Status', 1, 'BA_Rflag', 0);

##while reg##
vLogHTML_Info("<B>waits for BU</B>");

$now_time = time;
$end_time = $now_time + $BU_TIME;

while ($now_time < $end_time) {
	$sec = $end_time - $now_time;

	%packet = vRecv_at_LinkX($IF0, $sec,
		'haadrequest_nutxga_link0haany',
		'bu_nutxga_ha0ga_hoa_nuthga');
	$now_time = time;

	if($packet{recvFrame} eq 'bu_nutxga_ha0ga_hoa_nuthga'){
		vLogHTML_Info("<B>HA0 sends Binding Acknowledgement, Status 1, (R) bit 0.</B>");
		vSend_ba($IF0, 'ba_ha0ga_nutxga_rh2_nuthga', \%packet);
		$bu_flag = 1;
		last;
	}
	elsif($packet{recvFrame} eq 'haadrequest_nutxga_link0haany'){
		@value = ('HAADRep_Rflag',1);
#		vSend_haadreply($IF0, 'haadreply_ha0ga_nutxga_list_ha1', \%packet, @value);
		vSend_haadreply($IF0, 'haadreply_ha0ga_nutxga_list_ha0ha1', \%packet, @value);
		%value_haadreq = get_value_of_haadrequest(0, \%packet);

#		if ( $value_haadreq{'HAADReq_Rflag'} eq '0') {
		if ( $value_haadreq{'RFlag'} eq '0') {
			vLogHTML_Fail("INIT FAIL: HA0 does not receive Home Agent Address Discovery Request with R bit =1.");
			$initcount ++;
			goto TERM;
		}
	}
}

if($bu_flag != 1){
	vLogHTML_Fail("INIT FAIL: HA0 does not receive Binding Update.");
	$initcount ++;
	goto TERM;
}


##while de-reg##
vLogHTML_Info("<B>waits for de-registration</B>");

$now_time = time;
$end_time = $now_time + $BU_TIME;

while ($now_time < $end_time) {
	$sec = $end_time - $now_time;

	%packet = vRecv_at_LinkX($IF0, $sec,
		'haadrequest_nutxga_link0haany',
		'bu_nutxga_ha0ga_hoa_nuthga',
		'bu_nutxga_ha1ga_hoa_nuthga',
	);
	$now_time = time;

	if($packet{recvFrame} eq 'bu_nutxga_ha0ga_hoa_nuthga'){
		vSend_ba($IF0, 'ba_ha0ga_nutxga_rh2_nuthga', \%packet);
		%value_bu= get_value_of_bu(0, \%packet);
		if($value_bu{Lifetime} == 0){
			$de_bu_flag = 1;
			last;
		}
		else{
			$HA_num ++;
			if($HA_num > 2){
				vLogHTML_Fail("FAIL: HA0 receive re-registration.");
				$failcount ++;
				goto TERM;
			}
		}
	}
	elsif($packet{recvFrame} eq 'haadrequest_nutxga_link0haany'){
		@value = ('HAADRep_Rflag',1);
		vSend_haadreply($IF0, 'haadreply_ha0ga_nutxga_list_ha1', \%packet, @value);
		%value_haadreq = get_value_of_haadrequest(0, \%packet);

#		if ( $value_haadreq{'HAADReq_Rflag'} eq '0') {
		if ( $value_haadreq{'RFlag'} eq '0') {
			vLogHTML_Fail("FAIL: HA0 does not receive Home Agent Address Discovery Request with R bit =1.");
			$failcount ++;
			goto TERM;
		}
	}
	elsif($packet{recvFrame} eq 'bu_nutxga_ha1ga_hoa_nuthga'){
		vLogHTML_Fail("FAIL: HA0 does not receive de-registration.");
		$failcount ++;
		goto TERM;
	}
}

if($de_bu_flag != 1){
	vLogHTML_Fail("FAIL: HA0 does not receive de-registration.");
	$failcount ++;
	goto JUDGE_1;
}

##while new reg##
# check1 haadreq  -->send haadrep
# check2 bu to ha0-->err
# check3 bu to ha1-->send ba last

vLogHTML_Info("<B>waits for re-registration</B>");

$now_time = time;
$end_time = $now_time + $BU_TIME;

while ($now_time < $end_time) {
	$sec = $end_time - $now_time;

	%packet = vRecv_at_LinkX($IF0, $sec,
		'haadrequest_nutxga_link0haany',
		'bu_nutxga_ha0ga_hoa_nuthga',
		'bu_nutxga_ha1ga_hoa_nuthga',
	);
	$now_time = time;

	if($packet{recvFrame} eq 'bu_nutxga_ha0ga_hoa_nuthga'){
		vLogHTML_Fail("FAIL: HA0 receives re-registration.");
		$failcount ++;
		goto TERM;
	}
	elsif($packet{recvFrame} eq 'haadrequest_nutxga_link0haany'){
		@value = ('HAADRep_Rflag',1);
		vSend_haadreply($IF0, 'haadreply_ha0ga_nutxga_list_ha1', \%packet, @value);
		%value_haadreq = get_value_of_haadrequest(0, \%packet);

#		if ( $value_haadreq{'HAADReq_Rflag'} eq '0') {
		if ( $value_haadreq{'RFlag'} eq '0') {
			vLogHTML_Fail("FAIL: HA0 does not receive Home Agent Address Discovery Request with R bit =1.");
			$failcount ++;
			goto TERM;
		}
	}
	elsif($packet{recvFrame} eq 'bu_nutxga_ha1ga_hoa_nuthga'){
		@HA_BA_VALUE = ('BA_Status', 0, 'BA_Rflag', 1);
		vSend_ba($IF0, 'ba_ha1ga_nutxga_rh2_nuthga', \%packet);
		$re_bu_flag = 1;
		last;
	}
}

if($re_bu_flag != 1){
	vLogHTML_Fail("FAIL: HA1 does not receive re-registration.");
	$failcount ++;
	goto JUDGE_1;
}

#--------------------------------------------------------------#
vLogHTML_Info("<B>HA1 sends ICMP Echo Request with Type2 Routing Header.</B>");
#--------------------------------------------------------------#
# Send ICMP Echo Request. (HA1 -> NUTX with Type2 Routing Header)
my $id_no = 100;
@value = ('ECHO_IDENTIFIER', $id_no);
vSend_echorequest($IF0, 'echorequest_ha1ga_nutxga_rh2_nuthga', 0, @value);

# Receive ICMP Echo Reply. (NUTX -> HA1 with Home Address destination option)
# Receive ICMP Echo Reply. (out:NUTX -> HA1, in:NUTX -> HA1)
$now_time = time;
$end_time = $now_time + $ECHO_TIME;
while ($now_time < $end_time) {
	
	$sec = $end_time - $now_time;
	%packet = vRecv_at_LinkX($IF0, $sec,
		'bu_nutxga_ha0ga_hoa_nuthga',
		'bu_nutxga_ha1ga_hoa_nuthga',
		'echoreply_nutxga_ha1ga_hoa_nuthga',
		'echoreply_nuthga_ha1ga_tnl_nutx_ha1',
		'echoreply_nutxga_ha1ga_hoa_nuthga_tnl_nutx_ha1',
		);
	$now_time = time;

	if ($packet{recvFrame} eq 'bu_nutxga_ha0ga_hoa_nuthga') {
		vLogHTML_Fail("FAIL: HA0 receives re-registration.");
		$failcount ++;
		goto TERM;
	}
	elsif ($packet{recvFrame} eq 'bu_nutxga_ha1ga_hoa_nuthga') {
		@HA_BA_VALUE = ('BA_Status', 0, 'BA_Rflag', 1);
		vSend_ba($IF0, 'ba_ha1ga_nutxga_rh2_nuthga', \%packet);
		
		#--------------------------------------------------------------#
		vLogHTML_Info("<B>HA1 sends ICMP Echo Request with Type2 Routing Header.</B>");
		#--------------------------------------------------------------#
		$id_no ++;
		@value = ('ECHO_IDENTIFIER', $id_no);
		vSend_echorequest($IF0, 'echorequest_ha1ga_nutxga_rh2_nuthga', 0, @value);
	}
	elsif ($packet{recvFrame} eq 'echoreply_nutxga_ha1ga_hoa_nuthga') {
		%value_echo = get_value_of_echoreply(0, \%packet);
		if ($value_echo{'Identifier'} == $id_no) {
			$echo_hoa_flag = 1;
			last;
		}
	}
	elsif ($packet{recvFrame} eq 'echoreply_nuthga_ha1ga_tnl_nutx_ha1') {
		%value_echo = get_value_of_echoreply(0, \%packet);
		if ($value_echo{'Identifier'} == $id_no) {
			$echo_tnl_flag = 1;
			last;
		}
	}
	elsif ($packet{recvFrame} eq 'echoreply_nutxga_ha1ga_hoa_nuthga_tnl_nutx_ha1') {
		%value_echo = get_value_of_echoreply(0, \%packet);
		if ($value_echo{'Identifier'} == $id_no) {
			$echo_tnl_hoa_flag = 1;
			last;
		}
	}
}

#if (($echo_hoa_flag == 0) && ($echo_tnl_flag == 0) && ($echo_tnl_hoa_flag == 0)) {
#   goto JUDGE_1;
#}

##for IKE wait SA HA1 all ##
%packet_chk2 = vRecv_to_fowarding($FOWRDING_WAITING_TIME, echorequest_cn0ga_lfn0ga_tnl_ha1_nutx, 0, 0);


JUDGE_1:
#--------------------------------------------------------------#
# JUDGEMENT
#--------------------------------------------------------------#
if ($HA0_HR_de_bu_flag != 1) {
	vLogHTML_Fail("(*1) FAIL: HA0 receives the Binding Update with R=1 before HA0 not de-registration.");
	$failcount ++;
	goto TERM;
}
else{
	vLogHTML_Pass("(*1) PASS: HA0 receives the Binding Update with lifetime=0 and R=0.");
}


#check 2
if($re_bu_flag != 1){
	vLogHTML_Fail("(*2) FAIL: HA1 does not receive Binding Update.");
	$failcount ++;
}
else{
	vLogHTML_Pass("(*2) PASS: HA1 receives Binding Update with R=1.");
}

# check 3 echo
if ($echo_hoa_flag == 1) {
	vLogHTML_Pass("(*3) PASS: HA1 receives ICMP Echo reply with Home Address Option.");
}
elsif ($echo_tnl_flag == 1) {
	vLogHTML_Info("(*3) INFO: HA1 receives ICMP Echo reply by reveresed tunnel.");
}
elsif ($echo_tnl_hoa_flag == 1) {
	vLogHTML_Fail("(*3) FAIL: HA1 receives ICMP Echo reply with by Home Address Option abd reveresed tunnel.");
	$failcount ++;
	goto TERM;
}
else {
	vLogHTML_Fail("(*3) FAIL: HA1 does not receive ICMP Echo reply.");
	$failcount ++;
	goto TERM;
}

# check 4 foward
#vLogHTML_Info("packet = $packet_chk2{recvFrame}");

if($packet_chk2 == 1){
	vLogHTML_Fail("(*4) FAIL: LFN0 does not receive ICMP Echo Request.");
	$failcount ++;
}
elsif($packet_chk2 == 2){
	vLogHTML_Pass("(*4) PASS: LFN0 receives ICMP Echo Request.");
	vLogHTML_Fail("(*5) FAIL: CN0 does not receive ICMP Echo Reply.");
	$failcount ++;
}
else{
	vLogHTML_Pass("(*4) PASS: LFN0 receives ICMP Echo Request.");
	vLogHTML_Pass("(*5) PASS: CN0 receives ICMP Echo Reply.");
}


TERM:
#--------------------------------------------------------------#
# TERMINATION
#--------------------------------------------------------------#
# Terminate the state of TARGET.
Term_MN($IF0, 1);

################################################################
__END__


