#if HAVE_IPSEC && UNIQ_TRANS_SA && USE_SA5_SA6 && (!GRAN_TRANS_SA_TYPE)
		exthdr  = ext_esp_d4_mpa;
#elif HAVE_IPSEC && (!UNIQ_TRANS_SA) && USE_SA1_SA2 && (!GRAN_TRANS_SA_TYPE)
		exthdr  = ext_esp_d4_ba;
#endif
		upper   = _ICMPV6_NAME(local_erep_routing);
	},
	{
		payload = payload8;
	}
)
