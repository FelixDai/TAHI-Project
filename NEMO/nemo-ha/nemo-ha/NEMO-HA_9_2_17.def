		_SRC(nut2v6(HOME_PREFIX, HOME_PREFIXLEN, HA_HOME_LINK));
		_DST(v6merge(NEMO_PREFIX, NEMO_PREFIXLEN, v6ether(MNB_MAC)));
	},
	{
		header  = _HDR_IPV6_NAME(local_erep_routing);
