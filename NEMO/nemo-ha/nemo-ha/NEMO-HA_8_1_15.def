#include "./config.def"

//#if ROTATE_HOA
//#define MN_MAC  "00:00:00:00:00:d4"
//#endif

#if BU_MODE == 0
#define MN_ID   11
#else
#define MN_ID   21
#endif

#include "./mipv6.def"


FEM_icmp6_mip6prefixsol_exth(
	local_mps,
	_HETHER_rx2nut,
	{
		_SRC(v6merge(CARE_OF_PREFIX, CARE_OF_PREFIXLEN, v6ether(MN_MAC)));
		_DST(nut2v6(HOME_PREFIX, HOME_PREFIXLEN, HA_HOME_LINK));
	},
	{
		header  = _HDR_IPV6_NAME(local_mps);
		exthdr  = ext_homeaddress;
#if HAVE_IPSEC && UNIQ_TRANS_SA && USE_SA5_SA6
		exthdr  = ext_esp_mps;
#elif HAVE_IPSEC && (!UNIQ_TRANS_SA) && USE_SA1_SA2 && (!GRAN_TRANS_SA_TYPE)
		exthdr  = ext_esp_bu;
#endif
		upper   = _ICMPV6_NAME(local_mps);
	},
	{
		Reserved    = 1;
	}
)
