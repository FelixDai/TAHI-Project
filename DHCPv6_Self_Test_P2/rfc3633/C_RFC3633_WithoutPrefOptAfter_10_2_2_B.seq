BEGIN{
	$V6evalTool::TestVersion = '$Name: T_DHCPv6_Self_Test_P2_1_1_4 $';
}
use strict;
use V6evalTool;

use lib '../.';
use DHCPv6_common;
use Client_pktdesc;

my $type=$V6evalTool::NutDef{Type};
if($type ne 'router') {
	vLogHTML('<FONT COLOR="#FF0000">This test does not support Host!</FONT>');
	exit $V6evalTool::exitRouterOnly;
}

dhcpExitNS if(ChkFuncSupport('PREFIX_DELEGATION'));

#--------------------------------------------------------------#
# Initialization variables
#--------------------------------------------------------------#
my $IF0_NUT = $V6evalTool::NutDef{"Link0_device"};
my $IF0 = "Link0";
my ($pretime, $nextime, $reqtime, $interval) = (0, 0, 0, 0); 

my $init_timeout = 30;
my $retrans_timeout = $SOL_TIMEOUT * 2;
my $request_timeout = 30;
my $RT = 0;

vClear($IF0);
vCapture($IF0);
#--------------------------------------------------------------#
# Initialize DHCPv6 Client
#--------------------------------------------------------------#

my $ret = vRemote("dhcp6c.rmt", "start", "pd_iaid", "rd_iaid", "prefix", "rentime=50", "rebtime=80", "link0=$IF0_NUT");
if(my $ret != 0) {
	vLogHTML('<FONT COLOR="#FF0000">Cannot Initialize DHCPv6 Client program.</FONT><BR>');
	dhcpExitFail;
};


#--------------------------------------------------------------#
#1.  Wait until Solicit arrives 
#--------------------------------------------------------------#
my ($retsol1,%sol1) = wait_for_solicit($IF0,$init_timeout) ;
if($retsol1 != 0){
	dhcpExitFail;
}
$ret = options_exist(\%sol1,($CMP_CID|$CMP_IA_PD|$CMP_ETIME));
if($ret != 0){
	goto fail;
}

#--------------------------------------------------------------#
#2.  Wait until retransmitted Solicit arrives 
#--------------------------------------------------------------#
my ($retsol2,%sol2) = wait_for_solicit($IF0,$retrans_timeout) ;
if($retsol2 != 0){
	vLogHTML("Solicit message was not received within $retrans_timeout sec.<BR>");
	dhcpExitFail;
}

vClear($IF0);
#--------------------------------------------------------------#
# 3. response with Advertise 
#--------------------------------------------------------------#
$SID_OPTION = "opt_SID_LLT_server1";
$IA_PD_OPTION = "opt_IA_PD_Prefix2";
$Preference_OPTION = undef;
my ($retadv, %adv) = send_advertise($IF0, "advertise_server1_to_nut", \%sol1, "");
if($retadv != 0){
	dhcpExitFail;
}

my $advtime = $adv{'sentTime1'};

#--------------------------------------------------------------#
#4.  receive Request 
#--------------------------------------------------------------#
my ($retreq,%req) = wait_for_request($IF0,$request_timeout);
if($retreq != 0){
	dhcpExitFail;
}

$reqtime = getReceivedtime(\%req);

my $interval = abs($reqtime - $advtime);

if($interval >= 1){
	vLogHTML('<FONT COLOR="#FF0000">NUT must send Request message immidiately.</FONT><BR>');
	dhcpExitFail;
}


vClear($IF0);
vStop($IF0);
dhcpExitPass;
###############################################################################
__END__

