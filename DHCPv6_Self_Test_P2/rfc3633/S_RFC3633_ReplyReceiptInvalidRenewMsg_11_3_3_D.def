#include "../DHCPv6.def" 
#include "DHCPv6_test.def"

#ifndef  IA_PREFIX_PREFIX_NOTBIND
#define IA_PREFIX_PREFIX_NOTBIND    v6("2005:ffff:100::")
#endif

FEM_dhcp6_renew(
        renew_client1_to_alldhcp_Notbind,
        _HETHER_client1_to_nut,
        {
        _SRC(CLIENT1_LLOCAL_UCAST);
        _DST(v6(_ALLDHCPAGENTS_MCAST_ADDR));
        },
        {
                _SPORT(1027);
                _DPORT(547);
        },
        {
                Identifier = ID_RENEW;
                option = opt_CID_LLT_client1;
                option = opt_SID_ANY;
                option = opt_IA_PD_Prefix_Notbind;
        }
)


//invalid IA Prefix option
Opt_DHCPv6_IA_PD opt_IA_PD_Prefix_Notbind {
        Identifier      = IA_PD_IDENTIFIER_2;     
        Time1 = IA_PD_TIME3;
        Time2 = IA_PD_TIME4;
        option  = opt_IA_Prefix_Notbind;
}

//================================================================
// IA Prefix option
//
Opt_DHCPv6_IA_Prefix opt_IA_Prefix_Notbind {
        Prefix  = IA_PREFIX_PREFIX_NOTBIND;
        PreferredLifetime = IA_PREFIX_PLTIME;
        ValidLifetime = IA_PREFIX_VLTIME;
}

